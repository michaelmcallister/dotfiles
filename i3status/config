# see "man i3status" for documentation.
#
# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!
###############################################################################

general {
    interval 		= 1
    colors 			= true
    color_good      = '#FFFFFF'
    color_degraded  = '#F4B80C'
    color_bad       = '#F4225A'
    markup          = 'pango'
}

order += "volume master"
order += "disk /"
#order += "disk /home"
#order += "run_watch DHCP"
#order += "ipv6"
#order += "run_watch VPN"
order += "wireless wlp2s0"
order += "battery 0"
#order += "cpu_temperature 0"
order += "cpu_usage 0"
order += "load"
order += "tztime local"
order += "tztime time"

wireless wlp2s0 {
    format_up = "<span font='FontAwesome' foreground='#F4225A'></span>%essid"
    format_down = "disconnected"
}

battery 0 {
    format = "<span font='Terminus' foreground='#F4225A'>%status</span> %percentage %remaining"
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 11
    threshold_type = percentage
    hide_seconds = true
    status_chr = " "
    status_bat = " "
    status_full = " "
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

tztime local {
    format_time = "%A %e %B"
    format="<span font='Terminus' foreground='#F4225A'> </span>%time"
}

tztime time {
    format_time = "%H:%M:%S"
    format="<span font='Terminus' foreground='#F4225A'> </span>%time"
}

load {
    format = "<span font='Terminus' foreground='#F4225A'> </span>%1min"
}

cpu_usage {
    format = "<span font='Terminus' foreground='#F4225A'> </span>%usage"
}

cpu_temperature 0 {
	format = "<span font='Terminus' foreground='#F4225A'>🌡️%</span>degrees°C"
}

disk "/" {
	format = "<span font='Terminus' foreground='#F4225A'>&#xf0a0; </span>%avail"
	prefix_type	= custom
	low_threshold = 20
	threshold_type = percentage_avail
}

volume master {
    format = "<span font='Terminus' foreground='#F4225A'>&#xf028;</span> %volume"
    format_muted = "<span font='Terminus' foreground='#F4225A'&#xf026;</span>"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
